<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
    <template class="AmbienceLightTile" parent="GtkFlowBoxChild">
      <property name="visible">True</property>
      <property name="valign">GTK_ALIGN_START</property>
      <child>
        <object class="GtkButton" id="tile_button">
          <property name="visible">True</property>
          <signal name="clicked" handler="tile_clicked" swapped="no"/>
          <style>
            <class name="ambience_light_tile"/>
          </style>
          <child>
            <object class="GtkGrid">
              <property name="visible">True</property>
              <property name="row-homogeneous">True</property>
              <property name="column-homogeneous">True</property>
              <property name="hexpand">True</property>
              <child>
                <object class="GtkLabel" id="top_label">
                  <property name="visible">True</property>
                  <property name="halign">GTK_ALIGN_START</property>
                  <style>
                    <class name="heading"/>
                    <class name="ambience_light_tile_text"/>
                  </style>
                </object>
                <packing>
                  <property name="left-attach">0</property>
                  <property name="top-attach">0</property>
                  <property name="width">3</property>
                </packing>
              </child>
              <child>
                <object class="GtkBox">
                  <property name="visible">True</property>
                </object>
                <packing>
                  <property name="left-attach">0</property>
                  <property name="top-attach">1</property>
                </packing>
              </child>
              <child>
                <object class="GtkLabel" id="bottom_label">
                  <property name="visible">True</property>
                  <property name="halign">GTK_ALIGN_START</property>
                  <style>
                    <class name="caption"/>
                    <class name="ambience_light_tile_text"/>
                  </style>
                </object>
                <packing>
                  <property name="left-attach">0</property>
                  <property name="top-attach">2</property>
                  <property name="width">3</property>
                </packing>
              </child>
            </object>
          </child>
        </object>
      </child>
    </template>
  </interface>