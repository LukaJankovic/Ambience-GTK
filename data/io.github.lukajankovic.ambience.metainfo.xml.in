<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>io.github.lukajankovic.ambience</id>
  <name>Ambience</name>
  <releases>
    <release version="1.1.0" date="2020-12-22" type="stable">
      <description>
        <ul>
          <li>Discovering and managing lights have been separated. Use the discover mode ("+" button in the header bar) to discover lights on the network and add them to your list from there.</li>
          <li>Location and group info can now be seen inside the controls window beneath light controls. Available in both discovery and normal mode.</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0~b" date="2020-11-05" type="development">
      <description>
        <ul>
          <li>Added ability to remove lights from list</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0~a" date="2020-11-01" type="development">
      <description>
        <ul>
          <li>Discovering and managing lights have been separated. Use the discover mode ("+" button in the header bar) to discover lights on the network and add them to your list from there.</li>
        </ul>
      </description>
    </release>
    <release version="1.0.1" date="2020-10-30" type="stable">
      <description>
        <ul>
          <li>Changed Kelvin label to Temperature</li>
          <li>Version number not hard coded</li>
          <li>Added libhandy as dependency to meson.build</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2020-10-29" type="stable">
      <description>
        <ul>
          <li>Initial release</li>
        </ul>
      </description>
    </release>
  </releases>
  <summary>Control LIFX lights</summary>
  <url type="homepage">https://github.com/LukaJankovic/Ambience</url>
  <url type="bugtracker">https://github.com/LukaJankovic/Ambience/issues</url>
