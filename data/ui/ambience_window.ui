<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="GtkSizeGroup"/>
  <menu id="app_menu">
    <section>
      <item>
        <attribute name="label">About Ambience</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <template class="AmbienceWindow" parent="AdwApplicationWindow">
    <property name="width-request">270</property>
    <property name="height-request">500</property>
    <property name="can-focus">False</property>
    <property name="default-width">900</property>
    <property name="default-height">700</property>
    <child>
      <object class="AdwLeaflet" id="main_leaflet">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="can-navigate-back">True</property>
        <signal name="notify::fold" handler="notify_fold_cb" swapped="no"/>
        <child>
          <object class="GtkBox" id="menu_box">
            <property name="width-request">270</property>
            <property name="hexpand">0</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar" id="header_bar">
                <property name="visible">True</property>
                <property name="can-focus">False</property>
                <property name="hexpand">True</property>
                <binding name="show-end-title-buttons">
                  <lookup name="folded">main_leaflet</lookup>
                </binding>
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="1">Ambience</property>
                  </object>
                </property>
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="focus-on-click">0</property>
                    <property name="receives-default">1</property>
                    <property name="menu-model">app_menu</property>
                    <property name="icon-name">open-menu-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">8</property>
                    <child>
                      <object class="GtkMenuButton" id="add_group_button">
                        <property name="receives-default">1</property>
                        <property name="popover">new_group_popover</property>
                        <property name="icon-name">list-add-symbolic</property>
                        <signal name="activate" handler="add_group_toggled" swapped="no"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton">
                        <property name="receives-default">1</property>
                        <property name="icon-name">selection-mode-symbolic</property>
                        <signal name="toggled" handler="toggle_edit" swapped="no"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="hexpand">1</property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow" id="menu">
                <property name="focusable">1</property>
                <property name="hexpand">1</property>
                <property name="vexpand">1</property>
                <property name="child">
                  <object class="GtkViewport">
                    <property name="child">
                      <object class="GtkListBox" id="sidebar">
                        <property name="hexpand">1</property>
                        <signal name="row-selected" handler="sidebar_selected" swapped="no"/>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkRevealer" id="check_revealer">
                <property name="hexpand">1</property>
                <property name="transition-type">slide-up</property>
                <property name="child">
                  <object class="GtkActionBar">
                    <child type="end">
                      <object class="GtkButton" id="remove_button">
                        <property name="label" translatable="1">Remove</property>
                        <property name="sensitive">0</property>
                        <signal name="clicked" handler="remove_groups_clicked" swapped="no"/>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="vexpand">1</property>
            <property name="orientation">vertical</property>
            <style>
              <class name="sidebar"/>
            </style>
          </object>
        </child>
        <child>
          <object class="AdwLeaflet" id="controls_deck">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="can-navigate-back">True</property>
            <signal name="notify::visible-child-name" handler="notify_controls_visible_child_name" swapped="no"/>
            <child>
              <object class="GtkBox" id="tiles_box">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar" id="group_header_bar">
                    <property name="width-request">-1</property>
                    <property name="visible">True</property>
                    <property name="can-focus">False</property>
                    <property name="hexpand">True</property>
                    <binding name="show-start-title-buttons">
                      <lookup name="folded">main_leaflet</lookup>
                    </binding>
                    <child type="title">
                      <object class="GtkStack" id="group_label_stack">
                        <property name="transition-type">crossfade</property>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">label</property>
                            <property name="title" translatable="1">label</property>
                            <property name="child">
                              <object class="GtkLabel" id="title_label">
                                <attributes>
                                  <attribute name="weight" value="bold"></attribute>
                                </attributes>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="name">edit</property>
                            <property name="title" translatable="1">edit</property>
                            <property name="child">
                              <object class="GtkEntry" id="group_label_entry">
                                <property name="focusable">1</property>
                                <signal name="activate" handler="group_label_activate" swapped="no"/>
                                <signal name="changed" handler="group_label_changed" swapped="no"/>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">8</property>
                        <child>
                          <object class="GtkButton" id="back">
                            <property name="focusable">1</property>
                            <property name="receives-default">1</property>
                            <property name="icon-name">go-previous-symbolic</property>
                            <binding name="visible">
                              <lookup name="folded">main_leaflet</lookup>
                            </binding>
                            <signal name="clicked" handler="go_back" swapped="no"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="refresh_button">
                            <property name="receives-default">1</property>
                            <signal name="clicked" handler="reload_group" swapped="no"/>
                            <property name="icon-name">view-refresh-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkToggleButton" id="group_label_edit">
                        <property name="visible">0</property>
                        <property name="receives-default">1</property>
                        <signal name="toggled" handler="group_label_edit_toggled" swapped="no"/>
                        <property name="icon-name">document-edit-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator"/>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="focusable">1</property>
                    <property name="vexpand">1</property>
                    <property name="child">
                      <object class="GtkViewport">
                        <property name="vexpand">1</property>
                        <property name="child">
                          <object class="GtkBox" id="tiles_list">
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="margin-top">6</property>
                            <property name="margin-bottom">6</property>
                            <property name="hexpand">1</property>
                            <property name="orientation">vertical</property>
                            <child>
                              <placeholder/>
                            </child>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkRevealer" id="etiles_revealer">
                    <property name="hexpand">1</property>
                    <property name="transition-type">slide-up</property>
                    <property name="child">
                      <object class="GtkActionBar">
                        <child type="end">
                          <object class="GtkButton" id="etiles_remove">
                            <property name="label" translatable="1">Remove</property>
                            <property name="sensitive">0</property>
                            <property name="focusable">1</property>
                            <signal name="clicked" handler="remove_devices" swapped="no"/>
                            <style>
                              <class name="destructive-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <object class="GtkPopover" id="new_group_popover">
    <property name="child">
      <object class="GtkGrid">
        <property name="margin-start">10</property>
        <property name="margin-end">10</property>
        <property name="margin-top">10</property>
        <property name="margin-bottom">10</property>
        <property name="row-spacing">6</property>
        <property name="column-spacing">6</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="label" translatable="1">Group Name</property>
            <attributes>
              <attribute name="weight" value="bold"></attribute>
            </attributes>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="new_group_entry">
            <property name="focusable">1</property>
            <property name="activates-default">1</property>
            <signal name="activate" handler="create_group" swapped="no"/>
            <signal name="changed" handler="new_group_entry_changed" swapped="no"/>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="new_group_button">
            <property name="label" translatable="1">Create</property>
            <property name="sensitive">0</property>
            <signal name="clicked" handler="create_group" swapped="no"/>
            <style>
              <class name="suggested-action"/>
            </style>
            <layout>
              <property name="column">2</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkRevealer" id="invalid_name">
            <property name="child">
              <object class="GtkLabel">
                <property name="label" translatable="1">A group with that name already exists.</property>
              </object>
            </property>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <placeholder/>
        </child>
        <child>
          <placeholder/>
        </child>
        <child>
          <placeholder/>
        </child>
      </object>
    </property>
  </object>
</interface>
